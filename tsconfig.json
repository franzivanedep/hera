{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": { "@/*": ["*"] },
    "types": ["react", "react-native", "expo-router"],
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
